<div class="container clearfix">
	<div class="modal-dialog" role="document">
		<div class="post_index_m modal-content">

			<%= form_for @post,url:users_posts_path, remote: true do |f| %>

				<div class="modal-header">
	                <h4 class="modal-title">post</h4>
	                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	                   <span aria-hidden="true">&times;</span>
	                </button>
	            </div>

	            <div class="modal-body">
						<div class="post_new_image">
							<%= f.attachment_field :post_image%>
						</div>
						<div class="post_new_content">
						    <%= f.text_field :post_content, class:"form-control" %>
						</div>
					        <%= f.url_filed :post_item_url %>
						    <%= f.hidden_field :user_id, :value => current_user.id %>
				</div>

				<div class="modal-footer actions">
					<div class="post_new_image">
					    <%= f.submit class:"btn btn-primary"%>
					</div>
				</div>

			<% end %>

		</div>
	</div>
</div>