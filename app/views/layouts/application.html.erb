<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/65370e92be.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-default navbar-dark">
      <nav class="nav navbar-nav navbar-left">
        <h3 class="text-black" href="#">Picking</h3>
      </nav>

      <nav>
        <div class="navbar-nav w-100">
          <ul class="nav navbar-expand-lg navbar-right">

             <% if user_signed_in? %>
              <li>
         　　　 <%= link_to "Home", root_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
              </li>
              <li>
         　　　 <%= link_to "My Page", users_user_path(current_user.id), class:"btn btn-default rounded-pill",style:  "color:black;" %>
              </li>
              <li>
         　　　<%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-default rounded-pill",style:  "color:black;" %></li>

            <% else %>
              <li>
         　　　 <%= link_to "Home", root_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
              </li>
              <li>
         　　　 <%= link_to "Log in", new_user_session_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
              </li>
              <li>
         　　　<%= link_to "Sign up", new_user_registration_path, method: :delete, class:"btn btn-default rounded-pill",style:  "color:black;" %></li>


            <% end %>
          </ul>
        </div>
    </header>











    <%= yield %>


    <footer class="navbar navbar-dark bg-dark lg-10">
    <p class="text-white">picking-inc</p>
    </footer>

  </body>
</html>
