<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/65370e92be.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header_top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-white">
        <div class="container-fluid clearfix">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <!-- この下の行に mr-auto クラスを付与するだけ -->
            <ul class="navbar-nav mr-auto">
              <% @categories.each do |cate| %>
               <div class="nav_category">
                <li class="nav-item">
                  <div id="post_category">
                    <%= link_to cate.name, "/category/#{cate.id}" %>
                  </div>
                </li>
               </div>
              <% end %>
            </ul>

            <div class="nav_search">
              <%= form_tag(search_path,:method => 'get') do %>
                      <%= text_field_tag :search, "",placeholder:"item name" %>
                      <button type="submit" class="search_button"  id="search_button_link"><i class="fas fa-search"></i></button>
              <% end %>
            </div>

            <ul class="navbar-nav">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "Home", root_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>
                <li class="nav-item">
                  <%= link_to "About", root_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>
                <li class="nav-item">
                  <%= link_to "My Page", users_user_path(current_user.id), class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>

              <% else %>
                <li class="nav-item">
                  <%= link_to "Home", root_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log in", new_user_session_path, class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Sign up", new_user_registration_path, method: :delete, class:"btn btn-default rounded-pill",style:  "color:black;" %>
                </li>
              <% end %>
            </ul>

          </div>
        </div>
      </nav>


    </header>


    <%= yield %>

    <div class="modal fade " id="post-modal" tabshow="-1" role="dialog " aria-labelledby="exampleModalLabel" aria-hidden="true">
       <div class="modal-dialog">
          <div class="post_index_m modal-content">
          </div>
       </div>
    </div>


    <footer class="footer_bottom navbar navbar-dark bg-dark lg-10">
        <div id="post_link">
            <div class="fixed_post">
               <%= link_to 'Post', new_users_post_path, remote: true, class:"post_link" %>
            </div>
        </div>
        <p class="text-white">picking-inc</p>
    </footer>

  </body>
</html>
