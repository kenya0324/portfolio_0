<div class="modal-dialog" role="document">
  <div class="modal-content">

	<%= form_for @post, remote: true do |f| %>

	    <table>
	         <thead>
		         <tr>
		          <th>image</th>
		          <th>content</th>
		         </tr>
	         </thead>
	         <tbody>
		         <tr>
		           <td><%= f.attachment_field :post_image,class:"form-control" %></td>
		           <td><%= f.text_field :post_content, class:"form-control" %></td>
		           <td><%= f.hidden_field :user_id, :value => current_user.id %></td>
		           <td><%= f.submit class:"btn btn-primary"%></td>
		         </tr>
	         </tbody>
	    </table>

	 <% end %>

 </div>
</div>